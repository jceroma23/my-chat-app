{
    "version": 2,
    "builds": [
      {
        "src": "my-chat-app/dist/**",
        "use": "@vercel/static-build",
        "config": {
          "basePath": "/client"
        }
      },
      {
        "src": "server/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "client/$1",
        "headers": {
          "cache-control": "s-maxage=1, stale-while-revalidate"
        }
      }
    ]
  }
  